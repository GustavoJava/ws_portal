body {
}
td {
    /*vertical-align: top;*/
    padding-top: 3px;
}
label {
    margin-left:15px;
}
hr {
	border-color: #ccc;
	background-color: #ccc;
	margin: 5px 10px;
}


/*
classes
*/
.td_label {
	width: 15%;
	text-align: right;
}

.editaLayout {
	cursor: pointer;	
	color: #3B5CA1;
    font-family: Verdana,Arial,Helvetica,sans-serif;
}

.editaLayout td {
    padding: 0 10px
}

.layoutPadrao td {
	font-weight: bold;
}	

/*
ids
*/
#htmlLayout {
	border: 1px solid #ccc;
	margin: 10px;
	padding: 10px;
}

#div_msg_cadastro,
#div_msg_layout {
	display: block;
}

#criarNovoLayout {
	cursor: pointer;	
}

#htmlLayoutEdicao {
	resize:none	
}

#confirma {
	position: absolute;
	top: 30%;
	left: 40%;
	z-index: 1000;
	
}
