* {margin: 0; padding: 0;}

body{
    font: 12px Arial, Verdana, Tahoma;    
}

#content{
    border: 1px solid #CCCCCC;
    margin: 10px;
    padding: 7px;
}

h1 {
    color: #496A87;
    text-transform: uppercase;
    border-bottom: 1px solid #CCCCCC;
    margin-bottom: 10px; 
    font-size: 22px;
}

button {
    display: block;
    float: left;
}

form fieldset {
    background: none !important;
    border: 1px dotted #CCCCCC !important;
    margin: 0 0 15px 0 !important;
    width: auto !important;
    padding: 5px;        
}

form fieldset h2 {
    font-size: 16px;
    border-bottom: 1px dotted #CCCCCC;
    margin-bottom: 15px;
}

form fieldset label {
    width: 150px;
    display: block;
    float: left;
    margin-bottom: 20px;
    padding-top: 3px;
}

form fieldset .field {
    display: block;
    float: left;
    padding: 6px;
    margin-right: 10px;
}


/* CLASSES GENÉRICAS */
span.required {
    color: red;
    font-weight: bold;
}

ul.avisos {
    list-style: square;    
    margin: 15px 0 20px 15px;
    color: #666666;
}

ul.avisos li {
    text-decoration: underline;
}

.grande {
    width: 350px;
}

.medio {
    width: 170px;
}

.pequeno {
    width: 80px;
    font-size: 12px !important;
}

.clear {
    clear: both;
}